# Maintainer: Mattia Procopio (astro.matto) <matto.astro at gmail dot com>
pkgname=indi-3rdparty-libs
pkgver=1.9.4
pkgrel=1
epoch=
pkgdesc="Indi 3rd party libraries"
arch=(x86_64 aarch64)
url=""
license=('LGPL')
groups=()
depends=('libindi' 'libftdi' 'curl' 'libusb' 'ffmpeg')
makedepends=(cmake)
source=("https://github.com/indilib/indi-3rdparty/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('10ed5e6c3a306bd77c8e39d40a942dd166ae623b12bcd6bd52b871b7ba8c908b')

prepare() {
	mkdir -p build
}

build() {
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DBUILD_LIBS=1 ../indi-3rdparty-$pkgver
	make -j4
}

package() {
	cd build
	make DESTDIR="$pkgdir" install
	mv "$pkgdir/lib/firmware" "$pkgdir/usr/lib"
	mv "$pkgdir/lib/udev" "$pkgdir/usr/lib"
	rmdir "$pkgdir/lib"
}